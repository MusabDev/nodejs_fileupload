<form action="/upload" method="post" enctype="multipart/form-data">
  <div class="mb-4">
    <label for="file" class="form-label"> Browse file to upload </label>
    <input
      class="form-control form-control-lg"
      id="file"
      type="file"
      name="file"
      required
    />
  </div>
  <div class="mb-4">
    <label for="password" class="form-label">
      Password <sup>(optional)</sup>
    </label>
    <input
      class="form-control form-control-lg"
      id="password"
      type="password"
      name="password"
    />
  </div>
  <button class="btn btn-lg btn-primary">Upload</button>
</form>
